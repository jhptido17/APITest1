@page "{handler?}"
@model EditUserModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditUser";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>EditUser</title>
    </head>
    <body>
        <form method="post">
            <div class="row">
                <div class="col-md-2">
                    <input type="text" class="form-control" name="username" placeholder="Username">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" name="password" placeholder="Password">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" name="role" placeholder="Role">
                </div>
                <div class="col">
                    <button type="submit" asp-page-handler="EditUser" asp-route-id=@Model.json.Id class="btn btn-default">Edit</button>
                </div>
            </div>
        </form>
        @if(Model.json != null)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Password</th>
                        <th scope="col">Role</th>
                        @*<th scope="col">Status</th>*@
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@Model.json.Id</th>
                        <td>@Model.json.Username</td>
                        <td>@Model.json.Password</td>
                        <td>@Model.json.Role</td>
                        @*<td>@data.Status</td>*@
                    </tr>
                </tbody>
            </table>
        }
        else
        {
           <p>Users not found</p>     
        }
    </body>
</html>